<div style="position: absolute; bottom: 0px; width: 100%;">
    <ul class="nav navbar-nav navbar-left">
        <li><a href="{% if asideEl.link_quit %}{{ asideEl.link_quit }}{% else %}#{% endif %}" data-toggle="tooltip" title="{{ trans('default.quit')|capitalize }}">
            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
        </a></li>
        {% if asideEl.links_admin %}
        <li><div class="dropdown dropup" style="margin-top: 15px; margin-left: 5px;">
            <a href="#" data-toggle="dropdown" role="button" title="{{ trans('default.admin')|capitalize }}">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            </a>
            <ul class="dropdown-menu">
                {% for link in asideEl.links_admin %}
                    {% if link.href and link.text %}<li><a href="#" data-link="get" data-href="{{ link.href }}">{{ link.text|trans }}</a></li>{% endif %}
                    {% if not loop.last %}<li role="separator" class="divider"></li>{% endif %}
                {% endfor %}
            </ul>
        </div></li>
        {% endif %}
    </ul>
</div>