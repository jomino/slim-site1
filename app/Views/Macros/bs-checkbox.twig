{% macro render(item) %}
<div id="{{- item.id -}}" class="form-group {% if item.classes %}{{ item.classes|join(' ') }}{% endif %}">
    <input type="hidden"{% if item.form %} form="{{- item.form -}}"{% endif %} id="hidden-{{- item.name -}}" value="{{ item.raw }}">
    <div class="checkbox">
        <label class="checkbox-inline"{% if item.tooltip %} data-toggle="tooltip" title="{{- item.tooltip|trans|capitalize -}}">
            <input type="checkbox" id="input-{{- item.id -}}" name="{{- item.name -}}"{% endif %}{% if item.raw %} checked{% endif %}>
            &#160;{% if item.label %}{{ trans(item.label)|capitalize }}{% endif %}
        </label>
    </div>
</div>
<script type="text/javascript">
;(function($){
    var JQContentLoaded = function(){
        var $ = $ || window.$;
        if($){
            var $element = $('input:checkbox',$('#{{- item.id -}}')).first();
            var $hidden = $('input#hidden-{{ item.name }}');
            $(window.document).on('ifToggled', $element, function(e){
                var _el = e.target;
                var _val = $hidden.val();
                $hidden.val(_el.checked ? '1':'0').change();
            });
            $hidden.on('change', function(){
                var _el = $element[0].checked ? '1':'0';
                var _val = $(this).val();
                if(_el!=_val){ $element.iCheck(_val>0 ? 'check':'uncheck'); }
            });
            {% if item.readonly %}
                $element.iCheck('disable');
            {% endif %}
        }
    };
    if($){ JQContentLoaded(); }
    else{ document.addEventListener('DOMContentLoaded',JQContentLoaded); }
})(window.jQuery);
</script>
{% endmacro %}